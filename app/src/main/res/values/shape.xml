<resources>
    <!--Shape Appearance for small components like chips, buttons, text fields and FABs-->
    <style name="ShapeAppearance.Peekster.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_component_corner_radius</item>
    </style>

    <!--Shape Appearance for medium components like cards, alert dialogs-->
    <style name="ShapeAppearance.Peekster.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/medium_component_corner_radius</item>
    </style>

    <!--Shape Appearance for large components like side and bottom navigation drawers-->
    <style name="ShapeAppearance.Peekster.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/large_component_corner_radius</item>
    </style>

    <!--ShapeAppearance overlay for components which can be 'marked' by rounding their top left -->
    <!--corner - ie. job cards which have been starred-->
    <style name="ShapeAppearanceOverlay.Peekster.MediumComponent.Marked" parent="">
        <item name="cornerSizeTopLeft">@dimen/small_component_corner_radius</item>
    </style>

    <style name="ShapeAppearanceOverlay.Peekster.MediumComponent.Category" parent="">
        <item name="cornerSize">@dimen/large_component_corner_radius</item>
    </style>

    <style name="ShapeAppearance.Peekster.SmallComponent.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/micro_component_corner_radius</item>
    </style>

    <dimen name="micro_component_corner_radius">2dp</dimen>
    <dimen name="small_component_corner_radius">4dp</dimen>
    <dimen name="medium_component_corner_radius">8dp</dimen>
    <dimen name="large_component_corner_radius">12dp</dimen>

</resources>

