<resources>

    <!--Final, top-level theme-->
    <style name="Theme.Peekster.DayNight" parent="Theme.Peekster" />

    <!--Base theme, all common styling here-->
    <style name="Theme.Peekster" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>

<!--        <item name="android:colorBackground">@color/badge_white_50</item>-->
<!--        <item name="colorSurface">@color/badge_white_50</item>-->
<!--        <item name="colorPrimarySurfaceVariant">?attr/colorPrimaryVariant</item>-->
<!--        <item name="colorError">@color/badge_red_400</item>-->

<!--        <item name="colorOnPrimary">@color/badge_white_50</item>-->
<!--        <item name="colorOnSecondary">@color/badge_black_900</item>-->
<!--        <item name="colorOnBackground">@color/badge_black_900</item>-->
<!--        <item name="colorOnSurface">@color/badge_black_900</item>-->
<!--        <item name="colorOnError">@color/badge_black_900</item>-->

        <item name="scrimBackground">@color/black_trans</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Peekster.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Peekster.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Peekster.LargeComponent</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Peekster.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Peekster.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Peekster.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Peekster.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Peekster.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Peekster.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Peekster.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Peekster.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Peekster.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Peekster.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Badge.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Peekster.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Peekster.Overline</item>


        <item name="roundSelector">@drawable/round_selector_dark</item>
        <item name="rippleBackground">@drawable/ripple_background</item>
        <item name="colorPassive">@color/colorPassive</item>
        <item name="backgroundGradientBottom">@drawable/background_gradient_bottom_dark</item>
        <item name="fastScrollBackground">@drawable/fastscroll_default_bubble</item>
        <item name="rectSelector">@drawable/rect_selector</item>

        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>
        <item name="android:windowBackground">@color/background_color</item>

        <item name="motionInterpolatorPersistent">@android:interpolator/fast_out_slow_in</item>
        <item name="motionInterpolatorIncoming">@android:interpolator/decelerate_cubic</item>
        <item name="motionInterpolatorOutgoing">@android:interpolator/accelerate_cubic</item>

        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>

    </style>

    <style name="Theme.Peekster.Launcher">
        <!-- Window decor -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundDialog">@drawable/background_dialog</item>
        <item name="alertDialogTheme">@style/Widget.Peekster.DialogTheme</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Peekster.MovieDetail">
        <!-- Window decor -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Peekster.TvShowDetail">
        <!-- Window decor -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Peekster.Transfer">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Peekster.AddCategory">
        <!-- Window decor -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="hintTextAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:colorActivatedHighlight">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="Theme.Peekster.AudioPlayerTheme">
        <!-- Window decor -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>